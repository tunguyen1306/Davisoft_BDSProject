                    {
                        var resource = Resources.MenuResource.ResourceManager.GetString(("Menu" + Davisoft_BDSProject.Domain.Helpers.StringHelper.RemoveSpecialCharacters(title)).ToLower());
                        if (resource != null)
                        {
                            title = resource;
                        }
