                                var tmp = 0;
                            }
                        }
                        if (childItem.Url != null &&
                              (childItem.Url.Remove(0, 1) == ViewContext.RouteData.Values["controller"].ToString() ||
                              childItem.Url.Remove(0, 1) == ViewContext.RouteData.Values["controller"].ToString()
                              + "/" + ViewContext.RouteData.Values["action"].ToString()))
                        {
                            <li class="selected_lk">
