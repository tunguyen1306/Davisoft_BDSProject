                    bool isActiveBar = !string.IsNullOrEmpty(item.Url) && (item.Url == request.RawUrl ||
                                                                           item.Url.Remove(0, 1) == controllerActive ||
                                                                           item.Url.Remove(0, 1) == urlActive);
