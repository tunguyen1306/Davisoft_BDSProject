@using Davisoft_BDSProject.Domain.Entities
@using Resources
@model Menu

<section class="panel panel-default">
    <div class="panel-heading">@Resource.DeleteMenu</div>
    <div class="panel-body">
        <div class="form-horizontal">
            <h4>@Resource.ConfirmDelete</h4>
            <br/>
            <div class="form-group">
                <label class="control-label col-md-3">@Resource.Title</label>
                <div class="col-md-9">
                    @Html.Bootstrap().TextBoxFor(m => m.Title).HtmlAttributes(new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">@Resource.Url</label>
                <div class="col-md-9">
                    @Html.Bootstrap().TextBoxFor(m => m.Url).HtmlAttributes(new { @class = "form-control" })
                </div>
            </div>
            @using (Html.BeginForm("Delete", "Menus", new { id = Model.ID }))
            {
                <div class="col-md-9 col-md-offset-3">
                    @Html.Bootstrap().ActionLink(Resource.ButtonBackToList, "Index")
                    @Html.Bootstrap().SubmitButton().Id("submitbutton").Text(Resource.Delete).Style(ButtonStyle.Success)
                </div>
            }
        </div>
    </div>
</section>

@Html.Script(
    @<script>
        $("#submitbutton").on('click', function (e) {
            e.preventDefault();
            bootbox.confirm("@Resource.ConfirmDelete", function (isOK) {
                if (isOK) {
                    $('#submitbutton').parents("form").submit();
                }
            });
        });
    </script>)
