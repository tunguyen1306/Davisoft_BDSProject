@using Davisoft_BDSProject.Web.Models
@using Resources
@model MenuEditModel

<section class="panel panel-default">
    <div class="panel-heading">@Resource.EditMenu</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                @Html.HiddenFor(m => m.Menu.ID)
                @Html.Partial("_CreateOrEdit", Model)
                <div class="col-md-8 col-md-offset-3">
                    @Html.Bootstrap().ActionLinkButton(Resource.ButtonBackToList, "Index").PrependIcon(Icons.arrow_left)
                    @Html.Bootstrap().SubmitButton().Id("submitbutton").Text(Resource.Save).Style(ButtonStyle.Primary).PrependIcon(Icons.ok, true)
                </div>
            </div>
        }
    </div>
</section>
@Html.Script(
    @<script>
        $("#submitbutton").on('click', function (e) {
            e.preventDefault();
            bootbox.confirm("@Resource.ConfirmSave", function (isOK) {
                if (isOK) {
                    $('#submitbutton').parents("form").submit();
                }
            });
        });
    </script>)
