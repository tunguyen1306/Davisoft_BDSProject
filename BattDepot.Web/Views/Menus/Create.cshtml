@using Davisoft_BDSProject.Web.Models
@using Resources
@model MenuEditModel

<section class="panel panel-default">
    <div class="panel-heading">@Resource.AddMenu</div>
    @using (Html.BeginForm())
    {
        <div class="panel-body">
            <div class="form-horizontal">
                @Html.Partial("_CreateOrEdit", Model)
                <div class="col-md-9 col-md-offset-3">
                    @Html.Bootstrap().ActionLinkButton(Resource.ButtonBackToList, "Index").PrependIcon(Icons.arrow_left)
                    @Html.Bootstrap().SubmitButton().Id("submitbutton").Text(Resource.Submit).Style(ButtonStyle.Success).PrependIcon(Icons.ok, true)
                </div>
            </div>
        </div>
    }
</section>
@Html.Script(
    @<script>
        $("#submitbutton").on('click', function (e) {
            e.preventDefault();
            bootbox.confirm("@Resource.ConfirmCreate", function (isOK) {
                if (isOK) {
                    $('#submitbutton').parents("form").submit();
                }
            });
        });

        $(document).ready(function () {
            $('input[type=text]').css("text-transform", "none");
        });
        HRGLOBAL.AUTO_UPPERCASE = false;


    </script>)