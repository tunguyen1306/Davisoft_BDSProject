 @using WebBDS_Project.Models
@{
   
    davisoft_bdsprojectEntities db = new davisoft_bdsprojectEntities();
  
}
@using System.Configuration
 <div class="right_col">
                            <h3>Tin bất động sản</h3>
                            <ul class="list_news">
                              
                                @foreach (var item in db.BDSExtNews.Where(x => x.Active == 1 && x.ApproveStatus == 1 && x.CatExtNews == 1).ToList())
                                {
                                    <li>
                                        <a href="@Url.Action("DetailNews","Default",new { id=item.Name.UrlFrendly()+"-"+item.ID})">

                                            @if (item.UrlImage != null)
                                            {
                                                <img width="40" src="@ConfigurationManager.AppSettings["UrlImage"]@item.UrlImage.ToString().Split('_')[0]/@item.UrlImage">
                                            }
                                            else
                                            {
                                                <img width="40" src="~/Template/images/avatar-default.png" />
                                            }

                                        </a>
                                        <figcaption><a href="@Url.Action("DetailNews","Default",new { id=item.Name.UrlFrendly()+"-"+item.ID})">@item.Name</a></figcaption>
                                    </li>
                                }

                            </ul>
                        </div>