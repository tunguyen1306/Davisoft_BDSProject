@{
    ViewBag.Title = "ForgetPass";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}
<div class="container">
    <div class="grid_12 ">
        <div class="group_work">
            <div class="header_text">
                <h3><span><i class="fa fa-list-ul"></i>Quên mật khẩu</span></h3>
            </div>
            <div class="form-horizontal">
                <div class="grid_6">
                    <div class="right_col">
                        <ul class="list_news cus-listnew-login">
                            <li>
                               
                                    <p>
                                        <input placeholder="Email" id="email"  type="text">
                                    </p>
                                    <p>
                                        
                                        <a class="btLogin btnForgetPass" >Lấy lại mật khẩu</a>
                                    </p>
                                    
                            </li>

                        </ul>
                        
                    </div>
                </div>
                <div class="grid_6 omega">
                    <div class="right_col">
                        <div class="cus-h3">Đăng nhập</div>
                        <ul class="list_news cus-listnew-login">
                            <li>
                                @using (Html.BeginForm("Login", "Login"))
                                {
                                    <p>
                                        Email
                                        <input placeholder="Email" name="tblBDSAccount.Email" type="text">
                                    </p>
                                    <p>
                                        Mật khẩu
                                        <input placeholder="Mật khẩu" name="tblBDSAccount.PassWord" type="password">
                                        <button type="submit" class="btLogin">Đăng nhập</button>
                                    </p>
                                    <p class="box_remember">
                                        <a href="@Url.Action("ForgetPass", "Management")">Quên mật khẩu</a><br>
                                        Đăng nhập bằng
                                        <a href="#"><i class="fa fa-facebook-official"></i></a>
                                        <a href="#"><i class="fa fa-google-plus-square"></i></a>
                                    </p>
                                }
                            </li>

                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
<script>
    $('.btnForgetPass').click(function () {
        ForGetPass();
    });
    function ForGetPass()
    {
        var obj = {};
        obj.email = $('#email').val();
       
        $.ajax
       ({
           type: "POST",
           url: '@Url.Action("ForgetPass1", "Management")',
           data: JSON.stringify(obj),
           dataType: "json",
           contentType: "application/json;charset=utf-8",
           success: function (data) {


           }
       });
    }
</script>


