@using WebBDS_Project.Models
@{

    davisoft_bdsprojectEntities db = new davisoft_bdsprojectEntities();

}
<div class="right_col">
    <h3>Tìm kiếm theo mức lương</h3>
    <ul class="last_list_right filter" style="">


        @{
            var checklist = Request["filterSalary"] != null ? Request["filterSalary"].ToString().Split(',').Select(T => int.Parse(T)) : new int[0];
            foreach (var item in db.BDSSalaries.Where(T=>T.Active==1).ToList())
            {
                <li>
                    <a><input class="check_filter" @(checklist.Contains(item.ID) ? "checked='checked'" : "") type="radio" name="filterSalary" value="@item.ID" /> <label>@item.Name</label></a>
                </li>
            }
        }



    </ul>
</div>