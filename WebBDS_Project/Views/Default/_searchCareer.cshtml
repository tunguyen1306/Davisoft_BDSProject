@using WebBDS_Project.Models
@{

    davisoft_bdsprojectEntities db = new davisoft_bdsprojectEntities();

}
<div class="right_col" >
    <h3>Tìm kiếm theo ngành nghề</h3>
    <ul class="last_list_right filter" style="">


        @{
            var checklist = Request["filterCareer"] != null ? Request["filterCareer"].ToString().Split(',').Select(T => int.Parse(T)) : new int[0];
            foreach (var item in db.BDSCareers.Where(T=>T.Active==1).ToList())
            {
                <li>
                    <a><input @(checklist.Contains(item.ID) ? "checked='checked'" : "") class="check_filter" type="checkbox" name="filterCareer" value="@item.ID" /> <label>@item.Name</label></a>
                </li>
            }
        }



    </ul>
</div>