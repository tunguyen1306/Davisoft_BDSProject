            <div class="grid_12 title_detail">
                <div class="logo_detail">
                    <img height="100%" alt="@itemBdsEmploye.Name" src="@ConfigurationManager.AppSettings["UrlImage"]@itemBdsEmploye.UrlImage.ToString().Split('_')[0]/@itemBdsEmploye.UrlImage" />
                </div>
                <div class="name_detail">
                    <h2>@Model.tblbdsnew.Title</h2>

                    <p><strong>@itemBdsEmploye.Name</strong></p>
                    @foreach (var itemCity in Model.ListCityText.Where(x => x.Id == Model.tblbdsnew.AddressWork))
