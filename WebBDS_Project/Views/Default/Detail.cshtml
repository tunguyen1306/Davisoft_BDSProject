                                {
                                    @("Không yêu cầu")
                                }
                                @if (Model.tblbdsnew.Sex == 1)
                                {
                                    @("Nam")
                                }
                                @if (Model.tblbdsnew.Sex == 2)
                                {
                                    @("Nữ")
                                }
                            </td>
                            <td>
                                <label>Kinh nghiệm: </label>
                                @foreach (var itemExpirence in Model.ListTimework.Where(x => x.Id == Model.tblbdsnew.IdTimeWork))
                                {
                                    @itemExpirence.Name
                                }
                            </td>

                        </tr>

