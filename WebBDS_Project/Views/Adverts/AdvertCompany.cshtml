        <div class="grid_9 main_left">
            <div class="group_work">
                <div class="header_text">
                    <h3><span><i class="fa fa-list-ul"></i>Đăng tin tuyển dụng nhân viên</span></h3>
                </div>
                <div class="form-horizontal">
                    <h4>Thông tin cơ bản</h4>
                    <div class="row">
                        <label>Tiêu đề đăng tin<span class="required">*</span></label>
                        <div class="row-right">
                            @Html.TextBoxFor(m => m.tblbdsnew.Title, new { @class = "input3", @placeholder = "Nhập tiêu đề" })

                        </div>
                    </div>
                    <div class="row">
                        <label>Nơi làm việc <span class="required">*</span></label>
                        <div class="row-right">
                            @Html.DropDownListFor(m => m.tblbdsnew.AddressWork, new SelectList(Model.ListGeoModel, "CityId", "CityName"), new { @class = "dropdown" })

                        </div>
                        <label class="child">Mức lương <span class="required">*</span></label>
                        <div class="row-right">
                            <div class="pncon">
                                <b>Từ</b>
                                <select class="dropdown" tabindex="7" name="tblbdsnew.FromSalary">
                                    @for (int i = 3; i < 20; i++)
                                    {
                                        <option value="@i@(".000.000")">@i@(".000.000")</option>
                                    }


                                </select>
                            </div>
                            <div class="pncon">
                                <b style="margin-left: 11px;">Đến</b>
                                <select class="dropdown" tabindex="7" name="tblbdsnew.ToSalary">
                                    @for (int i = 3; i < 20; i++)
                                    {
                                        <option value="@i@(".000.000")">@i@(".000.000")</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <label>Số lượng <span class="required">*</span></label>
                        <div class="row-right">
                            <select class="dropdown" tabindex="7" name="tblbdsnew.Quantity">

                                @for (int i = 1; i < 10; i++)
                                {
                                    <option value="@i">@i</option>
                                }

                            </select>
                        </div>
                        <label class="child">Thưởng/Phụ cấp <span class="required">*</span></label>
                        <div class="row-right">

                            @Html.TextBoxFor(m => m.tblbdsnew.Bonus, new { @class = "input1", @placeholder = "Nhập thưởng /phụ cấp" })


                        </div>
                    </div>
                    <div class="row">
                        <label>Giới tính</label>
                        <div class="row-right">
                            <select class="dropdown" name="tblbdsnew.Sex" tabindex="7">
                                <option value="1">Nam</option>
                                <option value="2">Nữ</option>

                            </select>
                        </div>
                        <label class="child">Kinh nghiệm <span class="required">*</span></label>
                        <div class="row-right">
                            @Html.DropDownListFor(m => m.tblbdsnew.IdTimeWork, new SelectList(Model.ListTimework, "Id", "Name"), new { @class = "dropdown" })


                        </div>
                    </div>
                    <div class="row">
                        <label>Trình độ</label>
                        <div class="row-right">
                            @Html.DropDownListFor(m => m.tblbdsnew.IdEducation, new SelectList(Model.ListDucation, "Id", "Name"), new { @class = "dropdown" })


