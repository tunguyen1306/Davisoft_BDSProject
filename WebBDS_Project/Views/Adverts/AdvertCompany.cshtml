                            </div>
                            <div class="pncon">
                                <b style="margin-left: 11px;">Đến</b>
                                @Html.TextBoxFor(m => m.tblbdsnew.ToCreateNews, new { @class = "input1 datepicker1", @style = "width:190px", @placeholder = "dd/MM/yyyy" })


                            </div>
                        </div>
                    </div>
                    <div class="row">
                       
                        <label>Thành tiền(VNĐ):</label>
                        <table class="table-responsive">
                            <tbody>
                                <tr>
                                    <td>Tiền theo giá gốc</td>
                                    <td><b>20,000 VND/1 ngày</b></td>
													
                                </tr>
                                <tr style="background: none!important;">
                                    <td>Tiền phải trả</td>
                                    <td><b>600,000 VND</b></td>
													
