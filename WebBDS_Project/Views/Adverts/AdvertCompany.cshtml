                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                            <div class="pncon">
                                <b style="margin-left: 11px;">Đến</b>
                                <select class="dropdown" tabindex="7" name="tblbdsnew.ToAge">
