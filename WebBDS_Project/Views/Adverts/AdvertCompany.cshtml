@{
    ViewBag.Title = "AdvertCompany";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}
@model WebBDS_Project.Models.RegisterInformationModel
<!-- Content -->  
  

@using (Html.BeginForm("AdvertCompany", "Adverts"))
{
