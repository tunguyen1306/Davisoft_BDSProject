                                        <input class="input1" placeholder="Nhập địa chỉ liên hệ" type="text">
                                    </div>
                                    <div class="row-right">

                                        <div class="pncon width2">

                                            <label class="child">Tỉnh/TP</label>
                                             
                                                <select class="dropdown" tabindex="7">
                                                    <option value="1">Option 1</option>
                                                    <option value="2">Option 2</option>
