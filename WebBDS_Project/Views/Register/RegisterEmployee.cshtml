                                        <div class="pncon">

                                            <input class="input2" placeholder="MM" type="text">
                                        </div>
                                        <div class="pncon">
                                            <input class="input2 mg0_0" placeholder="YYYY" type="text">
                                        </div>
                                        
                                    </div>
                              
                                <div class="row">
                                    <label>Số điện thoại<span class="required">*</span></label>
